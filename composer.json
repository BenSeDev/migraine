{
    "name": "turanct/migrations",
    "type": "library",
    "description": "",
    "keywords": [
        "database",
        "migrations"
    ],
    "homepage": "https://github.com/turanct/migrations",
    "license": "MIT",
    "authors": [
        {
            "name": "Toon Daelman",
            "email": "spinnewebber_toon@hotmail.com",
            "homepage": "https://github.com/turanct",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "ext-json": "*",
        "symfony/finder": "^v4.4.8",
        "symfony/console": "^v4.4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5.20",
        "friendsofphp/php-cs-fixer": "^v2.16.3",
        "vimeo/psalm": "^3.11.2",
        "squizlabs/php_codesniffer": "^3.5.5"
    },
    "autoload": {
        "psr-4": {
            "Turanct\\Migrations\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Turanct\\Migrations\\": "tests"
        }
    },
    "bin": [
        "bin/migrate"
    ],
    "scripts": {
        "test": "phpunit",
        "fix": "php-cs-fixer fix src/ --rules=@PSR2",
        "psalm": "psalm --show-info=true",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true
    }
}
